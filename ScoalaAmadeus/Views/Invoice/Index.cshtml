@model IEnumerable<ScoalaAmadeus.ViewModels.InvoiceWithStudentNameViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Invoices</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Series")
        </th>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contractor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayName("Student")
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Invoice_Series)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Create_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contractor)
        </td>>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
       
     

        <td>
            @Html.ActionLink("Preview Invoice", "Preview", new { id = item.InvoiceId }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.InvoiceId }) |
            @Html.ActionLink("Details", "Details", new { id = item.InvoiceId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.InvoiceId }) |
            <b>@Html.ActionLink("Export Pdf", "ExportPdf", new { id = item.InvoiceId })</b>
        </td>

        <td>
            <img src="https://image21.net/103/pdf_icon_png/pdf_icon_png_4.jpg" height="50" onclick=""/>
        </td>
    </tr>
}

</table>
